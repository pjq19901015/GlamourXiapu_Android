<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_background" 
            android:layout_alignParentTop="true"
            android:id="@+id/activity_overviewcity_top">
      	
            <ImageView 
	    	    android:padding="5.0dip"
	    	    android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/back"
	        	android:layout_alignParentLeft="true"
	        	android:layout_centerVertical="true"
	        	android:id="@+id/activity_overviewcity_back"/>
            <TextView 
	            android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content"
	        	android:textAppearance="@android:style/TextAppearance.Large"
	        	android:text="@string/overviewcity"
	        	android:textColor="#ffffff"
	        	android:layout_centerInParent="true"/>
    </RelativeLayout>
	    
     <ScrollView
        android:layout_below="@id/activity_overviewcity_top" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	  	<RelativeLayout
	        android:layout_margin="10dp"
	        android:background="@color/white"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         >
	        
	        <ImageView 
	            android:padding="5.0dip"
	    	    android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/xiapu"
	        	android:id="@+id/activity_overviewcity_imageview"/>
	        <TextView 
	            android:layout_below="@id/activity_overviewcity_imageview"
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	style="@style/site_text"  
	        	android:id="@+id/activity_overviewcity_textview"/>
	        
	    </RelativeLayout>
     
	</ScrollView>
</RelativeLayout>