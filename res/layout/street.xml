<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
            android:id="@+id/street_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/titlebar"/>
	    
     <ScrollView
        android:layout_below="@id/street_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <RelativeLayout
	        android:layout_margin="10dp"
	        android:background="@color/white"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <ImageView 
	            android:padding="5.0dip"
	    	    android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/traffic_jiedao_songcheng"
	        	android:id="@+id/activity_traffic_street_imageview"/>
	        <TextView 
	            android:layout_below="@id/activity_traffic_street_imageview"
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	style="@style/site_text"  
	        	android:id="@+id/activity_traffic_street_textview"/>
	        <ImageView 
	            android:layout_below="@id/activity_traffic_street_textview"
	            android:padding="5.0dip"
	    	    android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/traffic_jiedao_longshoulu"
	        	android:id="@+id/activity_traffic_street_imageview1"/>
	        <TextView 
	            android:layout_below="@id/activity_traffic_street_imageview1"
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	style="@style/site_text"  
	        	android:id="@+id/activity_traffic_street_textview1"/>
	         <ImageView 
	            android:layout_below="@id/activity_traffic_street_textview1"
	            android:padding="5.0dip"
	    	    android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/traffic_jiedao_funing"
	        	android:id="@+id/activity_traffic_street_imageview2"/>
	        <TextView 
	            android:layout_below="@id/activity_traffic_street_imageview2"
	            android:layout_width="match_parent" 
	        	android:layout_height="wrap_content"
	        	style="@style/site_text"  
	        	android:id="@+id/activity_traffic_street_textview2"
                android:paddingBottom="10dp"/>
	         
	    </RelativeLayout>
     
	</ScrollView>
</RelativeLayout>