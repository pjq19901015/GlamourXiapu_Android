<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
	     android:id="@+id/activity_restaurant_item_rlayout_1"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content">
	  	 <ImageView 
		     android:layout_width="100dp"
		     android:layout_height="80dp"
		     android:id="@+id/activity_restaurant_item_imageview"/>   
	</RelativeLayout>
		
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/activity_restaurant_item_rlayout_1"
	    android:layout_toRightOf="@id/activity_restaurant_item_rlayout_1" >

	    <TextView
	        android:id="@+id/activity_restaurant_item_textview_title"
	        style="@style/site_item_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp" />

	    <TextView
	        android:id="@+id/activity_restaurant_item_textview_gg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/activity_restaurant_item_textview_title"
	        android:layout_margin="5dp"
	        android:text="@string/restaurant"
	        android:textColor="@color/gray" />

	    <RelativeLayout
	        android:id="@+id/activity_restaurant_item_imageview_heart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/activity_restaurant_item_textview_gg"
	        android:layout_margin="5dp" >

	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >

	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/heart_small_progress" />

	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/heart_small_progress" />

	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/heart_small_progress" />

	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/heart_small_progress" />

	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/heart_small_progress" />
	        </LinearLayout>
	    </RelativeLayout>
	</RelativeLayout>

</LinearLayout>